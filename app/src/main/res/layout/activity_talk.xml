<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_talk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lovingworld.View.activity.TalkActivity">
    <android.support.v7.widget.RecyclerView
        android:id = "@+id/recyclerView_talk"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />

    <LinearLayout
        android:id = "@+id/layout_talk"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
       >
    <ImageView
        android:id = "@+id/button_audio"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/a9j"/>

    <EditText
        android:id = "@+id/edit_input"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:inputType="textMultiLine"
        android:textCursorDrawable="@null"
        />
    <ImageView
        android:id = "@+id/emjoy_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/emoji_selected"/>
    <ImageView
        android:id="@+id/other_apply"
        android:layout_height="45dp"
        android:layout_width="50dp"
        android:src="@drawable/tg"
        android:layout_alignRight="@id/layout_talk"/>


    </LinearLayout>
</RelativeLayout>
