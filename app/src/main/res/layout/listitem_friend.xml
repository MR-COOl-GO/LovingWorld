<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/friend_item_touch"
      >
        <ImageView
            android:id = "@+id/friend_icon"
            android:layout_width="@dimen/friend_icon_width"
            android:layout_height="@dimen/friend_icon_height"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/listitem_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            />
        <TextView
            android:id = "@+id/friend_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:text = "hh"
            android:layout_toRightOf="@+id/friend_icon"
            android:textSize="@dimen/listitem_friend_textsize"
            />
    </RelativeLayout>

</FrameLayout>